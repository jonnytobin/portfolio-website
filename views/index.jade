extends layout

block content
    .row.background1
        .col-md-6
            h1 PORTFOLIO BUILDER
        // Login form     
        .col-md-6
            // When the submit button is pressed, load the template page
            form.form-inline(action="/template", method="post")
                .form-group
                    label.sr-only(for='exampleInputName2') Name
                    input#exampleInputName2.form-control.spacer(type='text', name="Name", placeholder='Name')
                .form-group
                    label.sr-only(for='exampleInputPassword3') Password
                    input#exampleInputPassword3.form-control.spacer(type='password', name="Password", placeholder='Password')
                .checkbox
                    label
                    input.spacer(type='checkbox')
                    |  Remember me
                button.btn.btn-default.spacer(type='submit') Sign in

        